<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="255dp"
        android:layout_height="205dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/caja_iniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_iniciar" />

    <EditText
        android:id="@+id/caja_iniciar"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="@string/Usuario"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cajaContrase単a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/cajaContrase単a"
        android:layout_width="345dp"
        android:layout_height="78dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="@string/contrase単a"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caja_iniciar" />

    <Button
        android:id="@+id/button"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="15dp"
        android:text="@string/iniciar"
        app:layout_constraintBottom_toTopOf="@+id/btn_registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cajaContrase単a" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="275dp"
        android:layout_height="47dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="58dp"
        android:onClick="abrirRegistro"
        android:text="@string/registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>